@using PagedList
@using PagedList.Mvc

@using ProductStockApp.Models.Entity
@model List<ClientsTable>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

@using (Html.BeginForm("Index", "Client", FormMethod.Get))
            {
                <p>
                    Aranacak Müşteri Adı: @Html.TextBox("p")
                    <input type="submit" value="Ara"/>
                </p>
            }

<table class="table table-bordered">
    <tr>
        <th>Müşteri ID</th>
        <th>Müşteri Adı</th>
        <th>Müşteri Soyadı</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    <tbody>
            @foreach(var client in Model)
            {
                <tr>
                    <td>@client.ClientID</td>
                    <td>@client.ClientName</td>
                    <td>@client.ClientSurname</td>
                    <td>@Html.ActionLink("Sil", "DeleteClient", new { id = client.ClientID }, new { @class = "btn btn-danger", onclick = "return confirm('Gerçekten silmek istiyor musunuz?')" })</td>
                    <td><a href="/Client/GetClient/@client.ClientID" class="btn btn-success">Güncelle</a></td>
                </tr>
            }
    </tbody>
</table>

